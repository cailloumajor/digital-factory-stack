{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchManagers": ["docker-compose"],
      "semanticCommitType": "fix"
    },
    {
      "matchPackageNames": ["centrifugo/centrifugo"],
      "matchCurrentVersion": "v3.0.5",
      "enabled": false
    }
  ]
}
